<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>

    <meta charset="utf-8">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>


    <script src="/assets/app_code_revised.js"></script>

    <title>Course Query Website</title>
  </head>


  <body>

<!-- make css later -->
    <div class="jumbotron jumbotron-fluid background-image parallax">
      <div class="container-fluid">
        <h1 class="display-4">Search your course here</h1>
        <hr>
      </div>
    </div>


<div class="container" id="view_widget">

  <form onsubmit="return false">
    <!-- query by instructor name -->
            <h2 class = "display-5">Instructor Query</h2>
            <div class="form-group">
              <label for="courseQuery">Search course by Instructor</label>
              <input type="text" class = "form-control" id = "instructorQuery" name="instructorQuery" value=""><br>
            </div>

            <button class="btn btn-outline-dark my-2"  onclick="updateView(this)" name="button" data-querytype = "by_instructor">Search</button>
            <hr class = "my-4">

            <!-- query by course code-->
            <h2 class = "display-5">Course Code Query</h2>
            <div class="form-group">

            <label for="courseQuery">Search course by Code</label>
            <input type="text" class = "form-control" id = "codeQuery" name="codeQuery" value=""><br>
            </div>

            <button class="btn btn-outline-dark my-2" onclick="updateView(this)" type="submit" name="button" data-querytype = "by_code">Search</button>
            <hr class = "my-4">

          <!-- query by course level-->
          <!-- IDEA: ask how to selec only one of the boxes -->
            <h2 class = "display-5">Course Level Query</h2>


            <div class="form-check">
            <input class="form-check-input" type="radio" name="level" id="graduate" value="graduate">
              <label class="form-check-label" for="graduate">
              Graduate
              </label>
            </div>

            <div class="form-check">
            <input class="form-check-input" type="radio" name="level" id="undergraduate" value="undergraduate">
              <label class="form-check-label" for="undergraduate">
              Undergraduate
              </label>
            </div>

            <button class="btn btn-outline-dark my-2" onclick="updateView(this)" type="submit" name="button" data-querytype = "by_level">Search</button>
            <hr class = "my-4">


            <!-- dual query-->
            <h2 class = "display-5">Dual Query</h2>
              <div class="form-group">
                <label for="courseQuery">Search course by Instructor</label>
                <input type="text" class = "form-control" id = "dual_name" name="courseQuery" value=""><br>
              </div>

              <div class="form-check">
              <input class="form-check-input" type="radio" name="dual_level" id="dual_graduate" value="graduate">
                <label class="form-check-label" for="dual_graduate">
                Graduate
                </label>
              </div>

              <div class="form-check">
              <input class="form-check-input" type="radio" name="dual_level" id="dual_undergraduate" value="undergraduate">
                <label class="form-check-label" for="dual_undergraduate">
                Undergraduate
                </label>
              </div>


            <button class="btn btn-outline-dark my-2" onclick="updateView(this)" type="submit" name="dual_query_button" data-querytype = "dual_query">Search</button>
            <hr class = "my-4">
    </div>
    </form>

    <div class="container m-auto" id="results">
    </div>

  </body>
</html>


<script id = "update_results" type = "text/x-handlebars-template">
      <div class="list-group list-group-flush mb-3">
        {{#each courses}}
        <a class="list-group-item list-group-item-action flex-column align-items-start bg-transparent">
          <div class="d-flex w-100 justify-content-between">
            <h3 class="mb-1">Course Title: {{this.title}}</h3>
          </div>
            <h5 class="mb-1">Instructor: {{this.instructor}}</h5>
            <h5 class="mb-1">Course Code: {{this.course_code}}</h5>
            <small>Course Level: {{this.course_level}}</small>
        </a>
        {{/each}}
      </div>
</script>
